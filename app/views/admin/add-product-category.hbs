<section>
    
  <div class="container">

    <h1>Add Product Category</h1>

    <form id="add-product-category-form" action="/admin/add-new-product-category" method="POST" enctype="multipart/form-data">
      {{#if categoryExistsErr}}
      <div>
        <p style="color: red;">{{categoryExistsErr}}</p>
      </div>
      {{/if}}
      <div class="form-group">
        <label for="category Id">Category Id:</label>
        <div class="input-group">
          <input type="number" class="form-control" id="id" name="categoryId" min="0" step="1" required>
        </div>
      </div>
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
      </div>
      <div class="form-group">
        <label for="image">Image:</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="category-image" name="category-image" accept="image/*" required>
          <label class="custom-file-label" for="image">Choose file</label>
        </div>
        <div id="image-preview" class="mt-2"></div>
      </div>
      <button type="submit" class="btn btn-primary">Add Category</button>
      <button type="reset" class="btn btn-secondary ml-2">Reset</button>
    </form>

  </div>

</section>


