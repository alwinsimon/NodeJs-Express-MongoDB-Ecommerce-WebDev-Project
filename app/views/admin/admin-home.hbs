            {{!-- Scripts for Displaying Charts and loading Jquery --}}
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

            <script>

                $(document).ready(function () {

                    // Monthly Sales Chart
                    const monthlySalesData = JSON.parse(decodeURIComponent('{{monthlySalesData}}'));
                    const monthlySalesVolume = monthlySalesData.map(data => data.totalSales);

                    var ctx1 = $("#monthly-sales").get(0).getContext("2d");
                    var myChart1 = new Chart(ctx1, {
                        type: "bar",
                        data: {
                            labels: ['July', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],

                            datasets: [{
                                label: "Montly Sales Analytics",
                                data: monthlySalesVolume,
                                backgroundColor: "rgba(0, 156, 255, .7)"
                            }
                            ]
                        },
                        options: {
                            responsive: true
                        }
                    });

                    // Payment Method Analytics Chart
                    const paymentAnalytics = JSON.parse(decodeURIComponent('{{paymentAnalytics}}'));

                    const paymentMethods = paymentAnalytics.map(data => data.paymentMethod)
                    const orderVolume = paymentAnalytics.map(data => data.orderVolume);
                    const usageCount = paymentAnalytics.map(data => data.usageCount);

                    var ctx2 = $("#payment-analytics").get(0).getContext("2d");
                    var myChart2 = new Chart(ctx2, {
                        type: "line",
                        data: {

                            labels: paymentMethods,

                            datasets: [

                                {
                                    label: "Order Volume",
                                    data: orderVolume,
                                    backgroundColor: "rgba(0, 156, 255, .5)",
                                    fill: true
                                },

                                {
                                    label: "Usage Count",
                                    data: usageCount,
                                    backgroundColor: "rgba(255, 99, 132, .5)",
                                    fill: true
                                }

                            ]
                        },
                        options: {
                            responsive: true
                        }
                    });

                })

            </script>
